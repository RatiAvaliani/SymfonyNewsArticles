{% for Article in Articles %}

    <div class="col-lg-4 mt-4">
        <div class="card" >

            {% if Article.image %}
                <img src="/uploads/{{ Article.image }}" class="card-img-top" alt="{{ Article.title }}">
            {% else %}
                <img src="/assets/images/no-image.jpg" class="card-img-top" alt="{{ Article.title }}">
            {% endif %}

            <div class="card-body">
                <h5 class="card-title mt-2 mb-3">
                    <a href="{{ path('article', {'id' : Article.id}) }}">{{ Article.title }}</a>
                </h5>
                <p class="card-text"> {{ Article.shortDescription }} </p>

                {% set Categories = Article.getCategories().toArray() %}
                <div class="d-block mt-2 mb-3">
                    {% include '/main/categories/elements/list.html.twig' %}
                </div>

                <a href="{{ path('article', {'id' : Article.id}) }}" class="btn btn-primary">See More</a>
            </div>

        </div>
    </div>

{% endfor %}