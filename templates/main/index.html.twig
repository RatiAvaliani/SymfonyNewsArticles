{% extends 'main/base.html.twig' %}

{% block title %}Home Page{% endblock %}

{% block stylesheets %}
    <link href="assets/css/home/index.css" rel="stylesheet">
{% endblock %}

{% block body %}

    <div class="container">
        <div class="row mt-5">

            {% for Category in Categories  %}
                <div class="col-lg-12">
                    <div class="row mt-5">

                        <div class="col-lg-12">
                            <h3><a href="{{ path('articles_by_category', {'Category' : Category.id, 'Page' : 1}) }}">{{ Category.title }}</a></h3>
                        </div>

                        {% set Articles = ArticlesQuery.setParameter('categoryId', Category.id).getQuery().getResult() %}

                        {% include '/main/articles/elements/list.html.twig' %}
                        
                    </div>
                </div>
            {% endfor %}

        </div>
    </div>

{% endblock %}
